<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroLinkedin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5sp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="92dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginRight="227dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textLinkedIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Linked In"
                    android:textColor="#0a5cb8"
                    android:textSize="27sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.09"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.144" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/iconX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x"
                    android:layout_marginLeft="6dp"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="100dp" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="start"
            android:layout_marginTop="60dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginLeft="22dp"
                android:textSize="17sp"
                app:layout_constraintTop_toBottomOf="@+id/textLinkedIn"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="28dp" />

        </LinearLayout>

    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/style_login_linkedin"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:errorEnabled="true"
        app:errorIconDrawable="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEmail"
        tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="22dp"
                android:text="Password (6 or more characters)"
                android:textSize="17sp"
                app:layout_constraintTop_toBottomOf="@+id/inputEmail"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="25dp" />

        </LinearLayout>

    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/style_login_linkedin"
        android:ems="10"
        android:inputType="textPassword"
        app:errorEnabled="true"
        app:errorIconDrawable="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPassword"
        tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textPrivacyPolicyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By clicking Agree &amp; Join, you agree to the LinkedIn "
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@+id/inputPassword"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="47dp" />

            <TextView
                android:id="@+id/textPrivacyPolicyText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textColor="#0a5cb8"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/textPrivacyPolicyText"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="378dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/textPrivacyPolicyText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agreement, Privacy Policy, "
                android:textColor="#0a5cb8"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.275"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textPrivacyPolicyText"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textPrivacyPolicyText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="and "
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/textPrivacyPolicyText3"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="395dp" />


            <TextView
                android:id="@+id/textPrivacyPolicyText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cookie Policy"
                android:textColor="#0a5cb8"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.037"
                app:layout_constraintStart_toEndOf="@+id/textPrivacyPolicyText4"
                app:layout_constraintTop_toTopOf="@+id/textPrivacyPolicyText4"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/style_button_login_linkedin"
        android:onClick="registrar"
        android:text="Agree &amp; Join"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPrivacyPolicyText4"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Or"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="196dp" />

    <Button
        android:id="@+id/buttonContinueWithGoogle"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/style_border"
        android:text="Continuar con Google"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/textOr"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="28dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textAlready"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Already on LinkedIn? "
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintTop_toBottomOf="@+id/buttonContinueWithGoogle"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="91dp" />

            <TextView
                android:id="@+id/textSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="20dp"
                android:text="Sign In"
                android:textColor="#0a5cb8"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/textAlready"
                app:layout_constraintTop_toBottomOf="@+id/buttonContinueWithGoogle"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>